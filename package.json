{
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "rimraf": "^6.0.1",
    "syncpack": "^13.0.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "engineStrict": true,
  "engines": {
    "node": ">20"
  },
  "lint-staged": {
    "*.{css,js,jsx,ts,tsx,md,mdx,json,jsonc}": "bun --bun biome check --write --unsafe --no-errors-on-unmatched --verbose --files-ignore-unknown 'true"
  },
  "name": "monorepo",
  "packageManager": "bun@1.1.43",
  "private": true,
  "scripts": {
    "b": "bun --bun --workspace='@backend/*'",
    "b:admin": "bun --bun --workspace='@backend/admin'",
    "b:admin:build": "bun --bun turbo run build --filter '@backend/admin'",
    "b:admin:dev": "bun --bun turbo run dev --filter '@backend/admin'",
    "b:admin:lint": "bun --bun turbo run lint --filter '@backend/admin'",
    "b:build": "bun --bun turbo run build --filter '@backend/*'",
    "b:core": "bun --bun turbo run dev --filter '@backend/core'",
    "b:core:build": "bun --bun turbo run build --filter '@backend/core'",
    "b:core:dev": "bun --bun turbo run dev --filter '@backend/core'",
    "b:core:lint": "bun --bun turbo run lint --filter '@backend/core'",
    "b:dev": "bun --bun turbo run dev --filter '@backend/*'",
    "build": "turbo run build",
    "check-types": "bun --bun tsc --noEmit",
    "dev": "turbo run dev",
    "f": "bun --bun --workspace='@frontend/*'",
    "f:desktop": "bun --bun --workspace='@frontend/desktop'",
    "f:desktop:build": "bun --bun turbo run build --filter '@frontend/desktop'",
    "f:desktop:dev": "bun --bun turbo run dev --filter '@frontend/desktop'",
    "f:desktop:lint": "bun --bun turbo run lint --filter '@frontend/desktop'",
    "f:desktop:start": "bun --bun turbo run start --filter '@frontend/desktop'",
    "f:docs": "bun --bun --workspace='@frontend/docs'",
    "f:docs:build": "bun --bun turbo run build --filter '@frontend/docs'",
    "f:docs:dev": "bun --bun turbo run dev --filter '@frontend/docs'",
    "f:docs:lint": "bun --bun turbo run lint --filter '@frontend/docs'",
    "f:docs:start": "bun --bun turbo run start --filter '@frontend/docs'",
    "f:mobile": "bun --bun --workspace='@frontend/mobile'",
    "f:mobile:build": "bun --bun turbo run build --filter '@frontend/mobile'",
    "f:mobile:dev": "bun --bun turbo run dev --filter '@frontend/mobile'",
    "f:mobile:lint": "bun --bun turbo run lint --filter '@frontend/mobile'",
    "f:mobile:start": "bun --bun turbo run start --filter '@frontend/mobile'",
    "f:web": "bun --bun --workspace='@frontend/web'",
    "f:web:build": "bun --bun turbo run build --filter '@frontend/web'",
    "f:web:dev": "bun --bun turbo run dev --filter '@frontend/web'",
    "f:web:start": "bun --bun turbo run start --filter '@frontend/web'",
    "format": "bun --bun biome format --write --files-ignore-unknown=true",
    "lint": "turbo run lint",
    "nuke:node_modules": "bunx rimraf **/node_modules",
    "ui": "bun --bun --workspace='@ui/*'",
    "ui:core": "bun --bun --workspace='@ui/core'",
    "ui:custom": "bun --bun --workspace='@ui/custom'",
    "ui:extension": "bun --bun --workspace='@ui/extension'",
    "ui:lib": "bun --bun --workspace='@ui/lib'",
    "ui:magic": "bun --bun --workspace='@ui/magic'",
    "ui:plate": "bun --bun --workspace='@ui/plate'",
    "ui:shadcn": "bun --bun --workspace='@ui/shadcn'"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@nestjs/core",
    "@parcel/watcher",
    "esbuild"
  ],
  "workspaces": ["backend/*", "frontend/*", "configs/*", "utils/*", "ui/*"]
}
